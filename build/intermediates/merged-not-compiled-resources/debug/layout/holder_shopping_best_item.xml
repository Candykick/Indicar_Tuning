<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                       
                                                       
           

    <LinearLayout
        android:layout_margin="@dimen/padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical" android:tag="layout/holder_shopping_best_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/padding_ultra_small"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            app:cardBackgroundColor="@null"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp">

            <FrameLayout
                android:background="@null"
                android:layout_width="160dp"
                android:layout_height="160dp">

                <ImageView
                    android:tag="binding_1"    
                    android:id="@+id/iv_notice"
                    android:scaleType="fitXY"
                    android:layout_width="160dp"
                    android:layout_height="160dp"/>

                <ImageView
                    android:id="@+id/iv_best"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_best"/>

                <TextView
                    android:id="@+id/iv_sold_out"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_main"
                    android:text="SOLD OUT"
                    android:background="@color/transCircle"/>

            </FrameLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_ultra_small"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/padding_ultra_small"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:tag="binding_2"           />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_small"
                    android:tag="binding_3"             />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_small"
                    android:text="원"/>

                <TextView
                    android:layout_marginLeft="@dimen/padding_ultra_small"
                    android:layout_marginStart="@dimen/padding_ultra_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:tag="binding_4"             />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="원"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/padding_ultra_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_ultra_small"
                android:textColor="@color/black"
                android:tag="binding_5"       />

        </LinearLayout>
    </LinearLayout>
         