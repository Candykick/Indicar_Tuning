<?xml version="1.0" encoding="utf-8"?>

                                                               

    <LinearLayout
        android:id="@+id/root_view"
        android:padding="@dimen/padding_main"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/fragment_write_content_0" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                style="@style/mainImageButton"
                app:srcCompat="@drawable/icon_hint"/>

            <Space
                android:layout_width="@dimen/padding_small"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:text="@string/write_content_hint"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_small" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_content"
            android:background="@drawable/line_square"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/line_round"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/text_size_medium"/>

            <Space
                android:layout_width="@dimen/padding_main"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="48dp"
                android:background="@drawable/line_round_box"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"/>
        </LinearLayout>
    </LinearLayout>
         