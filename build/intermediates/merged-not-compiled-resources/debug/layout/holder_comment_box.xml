<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_horizontal"
        android:orientation="horizontal" android:tag="layout/holder_comment_box_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_main"
            android:background="@null"
            android:hint="@string/comment_box"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:lineSpacingExtra="@dimen/padding_ultra_small"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/btn_submit"
            android:padding="@dimen/padding_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:text="@string/done"/>
    </LinearLayout>
         