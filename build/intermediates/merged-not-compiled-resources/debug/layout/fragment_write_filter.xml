<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                 
                                                  
                                                                   

    
                 
                            
                                                                                        
           

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" android:tag="layout/fragment_write_filter_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/tools" tools:context=".view.community.boardWrite.WriteFilterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_main"
            android:orientation="vertical" android:tag="binding_1">

            <include
                layout="@layout/layout_write_filter_item"
                                                         />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_board_filter"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_ultra_large" />

            <include
                layout="@layout/layout_write_filter_item"
                                                         />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.iindicar.indicar.utils.EmptyRecyclerView
                    android:id="@+id/recycler_images"
                    android:padding="@dimen/padding_ultra_small"
                    android:background="@drawable/line_square"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:gravity="center"
                    android:background="@drawable/line_square"
                    android:textAlignment="center"
                    android:textColor="@color/grayLine"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/image_empty"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_album"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:tag="binding_2"                                />

                    <ImageButton
                        android:id="@+id/btn_camera"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:tag="binding_3"                                 />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_ultra_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/line_round"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textSize="@dimen/text_size_medium"/>

                <Space
                    android:layout_width="@dimen/padding_main"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="48dp"
                    android:background="@drawable/line_round_box"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
         