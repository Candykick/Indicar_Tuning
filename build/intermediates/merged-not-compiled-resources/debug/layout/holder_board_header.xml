<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                                    

    
                 
                       
                                                     
           

    <LinearLayout
        android:padding="@dimen/padding_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white" android:tag="layout/holder_board_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context=".view.community.boardDetail.BoardDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:tag="binding_1"             
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/profile_image_size_small"
                android:layout_height="@dimen/profile_image_size_small"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:tag="binding_2"          />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_3" 
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btn_comment"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_small"
                style="@style/mainImageButton"
                android:tag="binding_4"                     />

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_marginLeft="@dimen/padding_ultra_small"
                android:layout_marginRight="@dimen/padding_ultra_small"
                style="@style/mainImageButton"
                android:tag="binding_5"                                                           />

        </LinearLayout>
    </LinearLayout>
         